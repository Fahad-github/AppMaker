<?xml version="1.0" encoding="utf-8"?>

         
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:tag="layout/add_tab_dialog_0">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Add Category"
        android:textColor="@color/mainBlue"
        android:textSize="18sp"
        android:textStyle="bold">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tabNameLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="48dp"
        android:textColorHint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tabNameEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Category Name"
            android:inputType="textCapWords"
            android:textColor="@color/mainBlue" />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tabNameLayout">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabAddButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="4dp"
            android:text="Add"
            android:textAllCaps="false">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabCancelButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tabAddButton"
            android:text="Cancel"
            android:textColor="@color/mainBlue"
            app:strokeColor="@color/mainBlue"
            app:strokeWidth="2dp">

        </com.google.android.material.button.MaterialButton>
    </RelativeLayout>

</RelativeLayout>

         