<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.Template2Fragment">

        <TextView
            android:id="@+id/productsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Products"
            android:textSize="22sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:textStyle="bold">

        </TextView>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productsTextView">

            <RelativeLayout
                android:id="@+id/number1"
                android:layout_row="0"
                android:layout_margin="10dp"
                android:layout_column="0">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="160dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/app_item_sample">

                </ImageView>

                <TextView
                    android:id="@+id/productName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image1"
                    android:layout_centerHorizontal="true"
                    android:text="Product Name"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/productPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productName1"
                    android:layout_centerHorizontal="true"
                    android:text="Product Price">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/number2"
                android:layout_row="1"
                android:layout_margin="10dp"
                android:layout_column="0">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="160dp"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:src="@drawable/app_item_sample">

                </ImageView>

                <TextView
                    android:id="@+id/productName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image2"
                    android:layout_centerHorizontal="true"
                    android:text="Product Name"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/productPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productName2"
                    android:layout_centerHorizontal="true"
                    android:text="Product Price">

                </TextView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/number3"
                android:layout_row="0"
                android:layout_margin="10dp"
                android:layout_column="1">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="160dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/app_item_sample">

                </ImageView>

                <TextView
                    android:id="@+id/productName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image3"
                    android:layout_centerHorizontal="true"
                    android:text="Product Name"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/productPrice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productName3"
                    android:layout_centerHorizontal="true"
                    android:text="Product Price">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/number4"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:src="@drawable/app_item_sample">

                </ImageView>

                <TextView
                    android:id="@+id/productName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image4"
                    android:layout_centerHorizontal="true"
                    android:text="Product Name"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/productPrice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productName4"
                    android:layout_centerHorizontal="true"
                    android:text="Product Price">

                </TextView>

            </RelativeLayout>

        </GridLayout>

        <ImageView
            android:id="@+id/colorEditor"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>