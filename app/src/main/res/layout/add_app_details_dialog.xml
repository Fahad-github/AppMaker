            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/appName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="48dp"
                android:textColorHint="@color/grey"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/mainBlue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/appNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/app_name_text"
                    android:inputType="textCapWords"
                    android:textColor="@color/mainBlue" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/creatorsName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="34dp"
                android:textColorHint="@color/grey"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/mainBlue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/creatorsNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/creator_s_name"
                    android:inputType="textCapWords"
                    android:textColor="@color/mainBlue" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/addIconRelativeLayout"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="12dp"
                >


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addIconTextViewLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColorHint="@color/grey"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/mainBlue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addIconTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="false"
                        android:hint="@string/app_icon"
                        android:inputType="textCapWords"
                        android:textColor="@color/mainBlue" />

                </com.google.android.material.textfield.TextInputLayout>


                <ImageButton
                    android:id="@+id/insertIconButton"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:src="@drawable/ic_image_black_24dp" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/appDesc"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="48dp"
                android:textColorHint="@color/grey"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/mainBlue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/appDescEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/app_description"
                    android:inputType="textMultiLine|textCapSentences"
                    android:textColor="@color/mainBlue" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>


</layout>
